php_value date.timezone "America/New_York"

php_value newrelic.license "<%= @license %>"
php_value newrelic.appname "<%= @application %><% if @env == 'staging' %> (Staging)<% end %>"
php_value newrelic.loglevel "info"

<Directory <%= @docroot %>>
  # Turn on Rewrites
  RewriteEngine On

  # Redirect all non static file request to index.php
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^(.*)$ index.php/$1 [L,QSA]
</Directory>
